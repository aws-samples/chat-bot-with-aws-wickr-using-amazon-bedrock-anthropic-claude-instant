{
  "apps": [
    {
      "name": "bedrock-claude-llm_bot",
      "args": [],
      "script": "node bedrock-claude-llm_bot.js",
      "exec_interpreter": "none",
      "autorestart": true,
      "watch": [
        "package.json"
      ],
      "ignore_watch": [
        ".git"
      ],
      "env": {
        "tokens": {
          "WICKRIO_BOT_NAME": {
            "value": "bedrock-claude-llm_bot",
            "encrypted": false
          },
          "AWS_REGION": {
            "value": "us-east-1",
            "encrypted": false
          },
          "AWS_PROFILENAME": {
            "value": "default",
            "encrypted": false
          }
        },
        "log_tokens": {
          "LOG_LEVEL": "debug",
          "LOG_FILE_SIZE": "10m",
          "LOG_MAX_FILES": "5"
        }
      },
      "out_file": "log.output",
      "error_file": "err.output"
    }
  ]
}